<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/city_view"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/btn_left_change_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="150dp"
            android:onClick="changeView"
            app:srcCompat="@android:drawable/ic_media_rew"
            android:contentDescription="LEFT BUTTON" />



        <ImageButton
            android:id="@+id/btn_right_change_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:onClick="changeView"
            app:srcCompat="@android:drawable/ic_media_ff"
            android:contentDescription="RIGHT BUTTON" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_city_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/tv_city_licance_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Licenca Plate"
             android:layout_alignRight="@+id/tv_city_title"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/tv_city_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explanation"
            android:layout_below="@+id/tv_city_title"
            android:textSize="24dp"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>